@{
    Layout = "_Layout";
}
<header>
    @{
        Html.RenderPartial("_HeaderNavBar", ViewData["User"]);
    }
</header>
<main>

    
    
    <div class="anuncio2" id="comentario">
        <h2>Comente, relate, <br>e interaja <br> aqui mesmo!</h2>
    </div>
                <div class="comentario">
                <h3 class="acesseT">Acesse sua conta</h3>
                <form class="login" method="POST" action='@Url.Action("Login", "Usuario")'>
                <div>
                <label for="email">E-mail</label>
                <input id="email" type="email" maxlength="40" minlength="3" name="email" />
                <br />
                </div>
                <div>
                <label for="senha">Senha</label>
                <input id="senha" type="password" maxlength="20" minlength="3" name="senha" />
                <br />
                </div>
                <input class="enviar" type="submit" value="Acessar minha conta" name="logar" />    
            </form>



            <h3>Não tem cadastro? Cadastre-se</h3>
            <form method="POST" action='@Url.Action("Cadastrar", "Cadastro")'>
                <label for="nome">Nome Colmpleto</label>
                <input type="text" name="nome" placeholder="" required>
                <br>
                <label for="email">E-mail</label>
                <input type="email" name="email" placeholder="" required>
                <br>
                <label for="tel">Data de Nascimento</label>
                <input type="date" name="data" placeholder="" required>
                <br>
                <label for="senha">Senha <strong>(mínimo de 6 caractéres)</strong></label>
                <input type="password" name="senha" required minlength="6">
                <br>
                <input type="submit" value="Cadastrar" class="envia">
            </form>
        </div>
</main>

